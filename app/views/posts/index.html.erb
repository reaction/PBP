<h1>Listing posts</h1>

<table>
  <tr>
    <th>Game</th>
    <th>User</th>
    <th>Posted</th>
    <th>Message</th>
    <th>Action</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.game_id %></td>
    <td><%= post.user_id %></td>
    <td><%= post.posted %></td>
    <td><%= post.message %></td>
    <td><%= post.action %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
